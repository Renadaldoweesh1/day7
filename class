public class Employee {
    public int emp_ID;
    public String name;
    public String depart;
    public double salary;
    public double bonus;
    public boolean resident;

    public Employee() {
        emp_ID = 0;
        name = null;
        resident = false;
        depart = null;
        salary = 0;
        bonus = 0;
    }
    public void setEmp_ID(int ID){
        emp_ID = ID;
    }
    public int getEmp_ID(){
        return emp_ID;
    }

    public void setDepart(String d){
        depart = d;
    }
    public String getDepart(){
        return depart;
    }
    public void setSalary(double s){
        salary = s;
    }
    public double getSalary(){
        return salary;
    }

    public void setSalary(double s, double b){
        salary = s;
        bonus = b;
    }

    public Employee(int ID, String n){
        emp_ID = ID;
        name = n;
    }
    public Employee(int ID, String n, boolean r){
        emp_ID = ID;
        name = n;
        resident = r;
    }
    public Employee(int ID, String n, boolean r, String d, double s, double b){
        emp_ID = ID;
        name = n;
        resident = r;
        depart = d;
        salary = s;
        bonus = b;
    }
    public void print_Emp_Dara(){
        System.out.println("Employee ID is: "+ emp_ID);
        System.out.println("Employee name is: "+ name);
        System.out.println("Employee Department is: "+ depart);
        System.out.println("Employee salary is: "+ salary);
        System.out.println("Employee bonus is: "+ bonus);
        System.out.println("Employee resident is: "+ resident);
    }


}
